/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.color-theme {
  color: #1098a6;
}

button[type="primary"] {
  background-color: #1098a6;
}

.nav-items {
  margin-top: 30rpx;
  background: white;
}

.nav-item {
  height: 88rpx;
  display:flex;
  margin-left: 30rpx;
  padding-right: 30rpx;
  align-items: center;
}
.nav-item.bottom-border {
  border-bottom: 1px solid #efeff4;
}
.nav-item .text-name {
  font-size: 34rpx;
}
.nav-item .text-right {
  font-size: 30rpx;
  color: #515151;
}

.flex-item-right {
  align-self: flex-end;
}

.vert-center {
  align-self: center;
}

.flex-rest-width {
  flex: 1;
}

.flex-row {
  display: flex;
  align-items: center;
  height: 100%;
}

.nav-item-arrow {
  width: 16rpx;
  height: 25rpx;
  margin-left: 40rpx;
}