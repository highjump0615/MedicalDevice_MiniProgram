<!--pages/manage/member/list.wxml-->

<view class="flex-row flex-center header">
  <text>会员总数：10人</text>
  <text>当月新增：10人</text>
</view>

<view class="nav-items top-border bottom-border">
  <!-- 昵称 -->
  <view class="nav-item bottom-border">
    <view class="flex-row flex-rest-width">
      <text class="text-name">昵称：</text>
      <input class="nav-item-content flex-rest-width" bindinput="onInputName" />
    </view>
  </view>
  <!-- 手机号 -->
  <view class="nav-item">
    <view class="flex-row flex-rest-width">
      <text class="text-name">手机号：</text>
      <input class="nav-item-content flex-rest-width" bindinput="onInputName" />
    </view>
  </view>
</view>

<!-- 查找 -->
<button type="primary">查找</button>

<!-- 查找结果 -->
<view class="search-result">
  <text>查找结果：</text>

  <!-- 表格 -->
  <view class="table">
    <!-- 表头 -->
    <view class="thead">
      <view class="tr">
          <view class="td">序号</view>
          <view class="td">昵称</view>
          <view class="td">手机号</view>
          <view class="td">注册时间</view>
      </view>
    </view>
  
    <!-- 内容-->
    <view class="tbody">
      <block wx:for="{{[0,1,2,3,4]}}" wx:for-item="i" wx:key="">
      <view class="tr">
          <view class="td">1</view>
          <view class="td">highjump</view>
          <view class="td">13092837629</view>
          <view class="td">1000</view>
      </view>
      </block>
    </view>
  </view>
</view>

